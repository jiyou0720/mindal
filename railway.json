{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "django-frontend",
      "path": "frontend",
      "deploy": {
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT myproject.wsgi:application"
      }
    },
    {
      "name": "flask-backend",
      "path": "backend",
      "deploy": {
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT app:app"
      }
    }
  ]
}
