{
  "services": [
    {
      "name": "backend",
      "path": "backend",
      "deploy": {
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT app:app",
        "healthcheckPath": "/health"
      }
    },
    {
      "name": "frontend",
      "path": "frontend",
      "deploy": {
        "startCommand": "npm run start",
        "healthcheckPath": "/"
      }
    }
  ]
}