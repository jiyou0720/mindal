{
  "$schema": "https://railway.com/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "build": {
        "builder": "NIXPACKS",
        "dockerfile": "./backend/Dockerfile"
      },
      "deploy": {
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT backend.app:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    {
      "name": "frontend",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "numReplicas": 1
      }
    }
  ]
}
